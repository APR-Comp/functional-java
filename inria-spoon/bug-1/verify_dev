#!/bin/bash
script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
benchmark_name=$(echo $script_dir | rev | cut -d "/" -f 3 | rev)
project_name=$(echo $script_dir | rev | cut -d "/" -f 2 | rev)
bug_id=$(echo $script_dir | rev | cut -d "/" -f 1 | rev)
dir_name=/experiment/$benchmark_name/$project_name/$bug_id
TEST_ID=$1
TEST_TIMEOUT=$2

cd $dir_name/src
bash $script_dir/run_test $TEST_ID $TEST_TIMEOUT > /dev/null 2>&1
exit_code_1=$?
patch -f -p 1 < $dir_name/dev-patch/fix.patch
bash $script_dir/build_subject  > /dev/null 2>&1
bash $script_dir/run_public_tests > /dev/null 2>&1
exit_code_2=$?
bash $script_dir/run_private_test > /dev/null 2>&1
exit_code_3=$?
patch -R -f -p 1 < $dir_name/dev-patch/fix.patch
bash $script_dir/build_subject > /dev/null 2>&1
echo "EXIT-BUGGY-PUBLIC=" $exit_code_1 " EXIT-FIXED-PUBLIC=" $exit_code_2 " EXIT-FIXED-PRIVATE=" $exit_code_3
if [[ $exit_code_2 -eq 0 ]] && [[  $exit_code_1 -ne 0 ]]  && [[  $exit_code_3 -eq 0 ]]
then
  echo "PASS"

  exit 0
else
  echo "FAIL"
  exit 1
fi;

